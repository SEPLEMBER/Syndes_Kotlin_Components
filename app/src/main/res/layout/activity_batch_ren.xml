<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#0A0A0A"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleLabel"
            android:text="Batch Rename"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="#39FF14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etFind"
            android:hint="Find (pattern or substring)"
            android:inputType="text"
            android:minLines="1"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#39FF14"
            android:textColor="#39FF14"
            android:textColorHint="#8AF58A"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etReplace"
            android:hint="Replace (template, supports $1, {n}, {n:03})"
            android:inputType="text"
            android:minLines="1"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#39FF14"
            android:textColor="#39FF14"
            android:textColorHint="#8AF58A"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etParams"
            android:hint="Parameters (e.g. -r -e -i -x --dry-run --collision=rename|skip|overwrite)"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#39FF14"
            android:textColor="#39FF14"
            android:textColorHint="#8AF58A"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbPreviewOnly"
            android:text="Preview only (show matches before applying)"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#39FF14"
            android:textColor="#39FF14" />

        <TextView
            android:id="@+id/instruction"
            android:text="Parameters:\n -r : recursive\n -e : pattern is regex\n -i : ignore case\n -x : preserve extension (if template lacks extension)\n --dry-run : simulate only (no writes)\n --collision=rename|skip|overwrite : conflict strategy\nTemplate notes: use $1 for regex groups; {n} inserts incremental number; {n:03} pads to width 3."
            android:layout_marginBottom="12dp"
            android:textColor="#39FF14"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnChoose"
            android:text="Choose Folder (SAF)"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#222222"
            android:textColor="#39FF14"/>

        <Button
            android:id="@+id/btnReplace"
            android:text="Rename"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#39FF14"
            android:textColor="#0A0A0A"/>

        <TextView
            android:id="@+id/tvStatus"
            android:text=""
            android:layout_marginTop="8dp"
            android:textColor="#39FF14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
