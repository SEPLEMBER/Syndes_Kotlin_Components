<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BatchRen — retro/cyberpunk"
            android:textColor="#39FF14"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btn_select_folder"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Select folder (SAF)"
            android:textColor="#000000"
            android:background="#39FF14"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tv_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Folder: (none)"
            android:textColor="#39FF14"
            android:paddingTop="8dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1) Что искать (например .txt)"
            android:textColor="#39FF14"
            android:paddingTop="14dp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/et_source"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#0b0b0b"
            android:textColor="#39FF14"
            android:hint=".txt"
            android:textColorHint="#2efc63"
            android:padding="10dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2) Правило переименования (e.g. IMG_\$numb.jpg or .py)"
            android:textColor="#39FF14"
            android:paddingTop="12dp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/et_rename"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#0b0b0b"
            android:textColor="#39FF14"
            android:hint="IMG_\$numb.jpg or .py"
            android:textColorHint="#2efc63"
            android:padding="10dp"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3) Флаги: -I (ignore case), -r (recursive)"
            android:textColor="#39FF14"
            android:paddingTop="12dp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/et_flags"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#0b0b0b"
            android:textColor="#39FF14"
            android:hint="-I -r"
            android:textColorHint="#2efc63"
            android:padding="10dp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instruction area"
            android:textColor="#39FF14"
            android:paddingTop="14dp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btn_rename"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Rename"
            android:textColor="#000000"
            android:background="#39FF14"
            android:textAllCaps="false"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: idle"
            android:textColor="#39FF14"
            android:paddingTop="10dp"
            android:typeface="monospace" />
    </LinearLayout>
</ScrollView>
