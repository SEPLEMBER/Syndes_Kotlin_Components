<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#0A0A0A"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleLabel"
            android:text="grep and replace"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="#FFBF00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etFind"
            android:hint="Find"
            android:inputType="textMultiLine"
            android:minLines="1"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFBF00"
            android:textColor="#FFBF00"
            android:hintTextColor="#BF8F00"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etReplace"
            android:hint="Replace"
            android:inputType="textMultiLine"
            android:minLines="1"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFBF00"
            android:textColor="#FFBF00"
            android:hintTextColor="#BF8F00"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etParams"
            android:hint="Parameters (e.g. -r -i -e -w -n --dry-run)"
            android:inputType="text"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFBF00"
            android:textColor="#FFBF00"
            android:hintTextColor="#BF8F00"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Preview-only checkbox (uses id expected by the Kotlin file: cbPreviewOnly) -->
        <CheckBox
            android:id="@+id/cbPreviewOnly"
            android:text="Preview only (show matches before applying)"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFBF00"
            android:textColor="#FFBF00" />

        <TextView
            android:id="@+id/instruction"
            android:text="Parameters:\n -r : recursive\n -i : ignore case\n -e : treat find as regex\n -w : whole-word match\n -n : show line numbers in preview\n --dry-run : simulate only (no writes)\nUse Preview only to inspect changes before applying."
            android:layout_marginBottom="12dp"
            android:textColor="#FFBF00"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnChoose"
            android:text="Choose Folder (SAF)"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#222222"
            android:textColor="#FFBF00"/>

        <Button
            android:id="@+id/btnReplace"
            android:text="Replace"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFBF00"
            android:textColor="#0A0A0A"/>

        <TextView
            android:id="@+id/tvStatus"
            android:text=""
            android:layout_marginTop="8dp"
            android:textColor="#FFBF00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
